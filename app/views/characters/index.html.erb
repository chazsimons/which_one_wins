      <%= link_to @characters[0].name, "/update/#{@characters[0].name}", class: "h3" %>
      <br>
      <br>
      <a href="/update/<%= @characters[0].name %>"><img src='<%= @characters[0].image %>' width=400 height=500></a>
    </div>
    <div class="col-sm-auto">
      <h3 class='text-center'>Vs.</h3>
    </div>
    <div class="col-md-auto">
      <%= link_to @characters[1].name, "/update/#{@characters[1].name}", class: "h3" %>
